{
    "configurations": [
        {
            "type": "java",
            "name": "debug aad3auth",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "mainClass": "fta.identity.sample.aad3auth.Aad3authApplication",
            "projectName": "aad3auth",
            "args": "--spring.profiles.active=local"
        },
        {
            "type": "java",
            "name": "debug with proxy - aad3authwithgroups",
            "request": "launch",
            "cwd": "${workspaceFolder}/aad3auth-with-groups/",
            // "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "mainClass": "fta.identity.sample.aad3authwithgroups.Aad3authApplication",
            "projectName": "aad3authwithgroups",
            "args": "--spring.profiles.active=local --logging.level.org.springframework=DEBUG",
            // the below configures the jvm to work with fiddler proxy running outside of the dev container on the same machine:
            "vmArgs": "-Dcom.sun.net.ssl.checkRevocation=false -Dtrust_all_cert=true -Dhttp.proxyHost=192.168.65.2 -Dhttp.proxyPort=8888 -Dhttps.proxyHost=192.168.65.2 -Dhttps.proxyPort=8888"
        },
        {
            "type": "java",
            "name": "debug - aad3authwithgroups",
            "request": "launch",
            "cwd": "${workspaceFolder}/aad3auth-with-groups/",
            // "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "mainClass": "fta.identity.sample.aad3authwithgroups.Aad3authApplication",
            "projectName": "aad3authwithgroups",
            "args": "--spring.profiles.active=local --logging.level.org.springframework=DEBUG"
        }
    ]
}